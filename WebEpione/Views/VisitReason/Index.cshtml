                    </ul>
                </div>
            </aside>
            <!-- /asdide -->

            <div class="col-xl-9 col-lg-8">

                <div class="tabs_styled_2">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="book-tab" data-toggle="tab" href="#book" role="tab" aria-controls="book">here it is your performence</a>
                        </li>
                        
                        
                    </ul>
                    <!--/nav-tabs -->

                    <div class="tab-content">

                        <div class="tab-pane fade show active" id="book" role="tabpanel" aria-labelledby="book-tab">
                            <form>
                                
                                <div class="form-group add_bottom_45">
                                    <div id="calendar"></div>
                                    <input type="hidden" id="my_hidden_input">
                                   
                                </div>
                                
                              
                                <!-- /row -->

                                <div class="main_title_3">
                                    <h3> your visit Reason </h3>
                                </div>
@foreach (var item in Model)
{
                                <ul class="treatments clearfix">
                                    <li>
                                        <div class="checkbox">
                                            <input type="checkbox" class="css-checkbox" id="visit1" name="visit1">
                                            <label for="visit1" class="css-label">@Html.DisplayFor(modelItem => item.VRDescription)
                                             @Html.ActionLink("Edit", "Edit", new { id = item.VRId }) |                         
                                            @Html.ActionLink("Delete", "Delete", new { id = item.VRId }) </label>
                                        </div>
                                    </li>
                                   
                                   
                                    
                                </ul>}
                            </form>
                            <hr>
                            <p class="text-center"><a href="booking-page.html" class="btn_1 medium"> Get a new Visit Reason </a></p>
                        </div>
                        <!-- /tab_1 -->

                        
                        <!-- /tab_2 -->

                        
                        <!-- /tab_3 -->
                    </div>
                    <!-- /tab-content -->
                </div>
                <!-- /tabs_styled -->
            </div>
