@using WebEpione.Models
@model WebEpione.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>
<div class="bg_color_2">
    <div class="container margin_60_35">
        <div id="register">
            <h1>Please register to Findoctor!</h1>
            <div class="row justify-content-center">
                <div class="col-md-5">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4>Create a new account.</h4>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="box_form">
                            <div class="form-group">
                                @Html.LabelFor(x => x.LastName)<br />
                                @Html.TextBoxFor(x => x.LastName,
                             new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.FirstName)<br />
                                @Html.TextBoxFor(x => x.FirstName,
                             new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                           
                            <div class="form-group">
                                @Html.LabelFor(x => x.Email)<br />
                                @Html.TextBoxFor(x => x.Email,
                             new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Password)<br />
                                @Html.PasswordFor(x => x.Password,
                             new
                             {
                                 htmlAttributes = new { @class = "form-control" }
                             })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.ConfirmPassword)<br />
                                @Html.PasswordFor(x => x.ConfirmPassword,
                             new
                             {
                                 htmlAttributes = new { @class = "form-control" }
                             })
                            </div>
                           

                            <div id="pass-info" class="clearfix"></div>
                            <div class="checkbox-holder text-left">
                                <div class="checkbox_2">
                                    <input type="checkbox" value="accept_2" id="check_2" name="check_2" checked>
                                    <label for="check_2"><span>I Agree to the <strong>Terms & Conditions</strong></span></label>
                                </div>
                            </div>
                            <div class="form-group text-center add_top_30">
                                <input class="btn_1" type="submit" value="Submit">
                            </div>
                        </div>
                        <p class="text-center"><small>Has voluptua vivendum accusamus cu. Ut per assueverit temporibus dissentiet. Eum no atqui putant democritum, velit nusquam sententiae vis no.</small></p>
                    }
                </div>
            </div>
