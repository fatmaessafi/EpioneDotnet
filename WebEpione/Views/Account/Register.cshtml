@using WebEpione.Models
@model WebEpione.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>
<div class="bg_color_2">
    <div class="container margin_60_35">
        <div id="register">
            <h1>Create a new account</h1>
            <div class="row justify-content-center">
                <div class="col-md-5">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        
                        <div class="box_form">
                            <div class="form-group">
                                @Html.LabelFor(x => x.LastName)<br />
                                @Html.TextBoxFor(x => x.LastName,
                             new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.FirstName)<br />
                                @Html.TextBoxFor(x => x.FirstName,
                             new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.Email)<br />
                                @Html.TextBoxFor(x => x.Email,
                             new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Password)<br />
                                @Html.PasswordFor(x => x.Password,
                             new
                             {
                                 htmlAttributes = new { @class = "form-control" }
                             })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.ConfirmPassword)<br />
                                @Html.PasswordFor(x => x.ConfirmPassword,
                             new
                             {
                                 htmlAttributes = new { @class = "form-control" }
                             })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.PhoneNumber)<br />
                                @Html.TextBoxFor(x => x.PhoneNumber,
                             new
                             {
                                 htmlAttributes = new { @class = "form-control" }
                             })
                            </div>
                            <div class="form-group">

                               @Html.DropDownList("Gender",
                            new SelectList(Enum.GetValues(typeof(Gender))),
                            "Select Gender",
                                new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.BirthDate)<br />
                                @Html.TextBoxFor(x => x.BirthDate,
                             new
                             {
                                 htmlAttributes = new { @class = "form-control" }
                             })
                            </div>
                            <div class="form-group">
                              
                               @Html.DropDownList("CivilStatus",
                    new SelectList(Enum.GetValues(typeof(CivilStatus))),
                    "Select Civil Status",
                    new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.HomeAddress)<br />
                                @Html.TextBoxFor(x => x.HomeAddress,
                             new
                             {
                                 htmlAttributes = new { @class = "form-control" }
                             })
                            </div>


                            <div id="pass-info" class="clearfix"></div>
                           <!--Check box obligatoire-->
                                <div class="form-group">
                                   @Html.CheckBoxFor(x => x.TermsAndConditions,
                             new
                             {
                                 htmlAttributes = new { @id = "check_2" }
                             }) 
						@Html.LabelFor(x => x.TermsAndConditions)
						@Html.ValidationMessageFor(x => x.TermsAndConditions)
                               
                            </div>
                            
                            <div class="form-group text-center add_top_30">
                                <input class="btn_1" type="submit" value="Submit">
                            </div>
                        </div>
                        <p class="text-center"><small>Make sure your informations are exact for a better experience.</small></p>
                    }
                </div>
            </div>
            </div>
</div>  
</div>